{
	"name": "task-management-api",
	"version": "1.0.0",
	"description": "Mini-aplicación de gestión de tareas con integración Firebase y Swagger",
	"main": "dist/app.js",
	"scripts": {
		"dev": "ts-node-dev --respawn --transpile-only src/app.ts",
		"build": "tsc",
		"start": "node dist/app.js",
		"test": "jest",
		"test:watch": "jest --watch",
		"test:coverage": "jest --coverage",
		"test:ci": "jest --ci --coverage --watchAll=false",
		"lint": "eslint src/**/*.ts",
		"lint:fix": "eslint src/**/*.ts --fix",
		"format": "prettier --write src/**/*.ts",
		"format:check": "prettier --check src/**/*.ts",
		"type-check": "tsc --noEmit",
		"clean": "rm -rf dist coverage",
		"prebuild": "npm run clean && npm run lint && npm run type-check",
		"postinstall": "npm run build",
		"docker:build": "docker build -t task-management-api .",
		"docker:run": "docker run -p 3000:3000 task-management-api",
		"prepare": "husky install"
	},
	"dependencies": {
		"express": "^4.18.2",
		"cors": "^2.8.5",
		"helmet": "^7.1.0",
		"axios": "^1.6.2",
		"firebase-admin": "^12.0.0",
		"swagger-jsdoc": "^6.2.8",
		"swagger-ui-express": "^5.0.0",
		"express-rate-limit": "^7.1.5",
		"dotenv": "^16.3.1"
	},
	"devDependencies": {
		"@types/express": "^4.17.21",
		"@types/cors": "^2.8.17",
		"@types/swagger-jsdoc": "^6.0.4",
		"@types/swagger-ui-express": "^4.1.6",
		"@types/node": "^20.10.4",
		"@types/jest": "^29.5.8",
		"typescript": "^5.3.3",
		"ts-node-dev": "^2.0.0",
		"jest": "^29.7.0",
		"ts-jest": "^29.1.1",
		"@typescript-eslint/parser": "^6.13.1",
		"@typescript-eslint/eslint-plugin": "^6.13.1",
		"eslint": "^8.54.0",
		"eslint-plugin-import": "^2.29.0",
		"eslint-plugin-security": "^1.7.1",
		"eslint-import-resolver-typescript": "^3.6.1",
		"prettier": "^3.1.0",
		"husky": "^8.0.3",
		"lint-staged": "^15.1.0",
		"jest-html-reporters": "^3.1.7",
		"supertest": "^6.3.3",
		"@types/supertest": "^6.0.1"
	},
	"keywords": [
		"nodejs",
		"express",
		"firebase",
		"swagger",
		"docker",
		"typescript"
	],
	"author": "Tu Nombre",
	"license": "MIT"
}
